{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["applications/.*\\.ya?ml$"],
      "matchStrings": [
        "repoURL:\\s*(?<registryUrl>.*?)\\s*\\n.*?chart:\\s*(?<depName>.*?)\\s*\\n.*?targetRevision:\\s*(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "fileMatch": ["k8s-upgrade.*\\.ya?ml$", "applications/.*\\.ya?ml$"],
      "matchStrings": [
        "version:\\s*(?<currentValue>v?[0-9].*?\\+rke2r[0-9]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "rancher/rke2"
    }
  ],
  "packageRules": [
    {
      "managers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchManagers": ["regex"],
      "groupName": "Helm chart updates",
      "automerge": false
    },
    {
      "matchPackagePatterns": ["^ghcr\\.io/.*"],
      "managers": ["docker"],
      "automerge": false
    }
  ]
}
