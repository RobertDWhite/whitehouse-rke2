apiVersion: v1
kind: Secret
metadata:
  name: matrix-webhooks-secrets
  namespace: matrix

type: Opaque
stringData:
  KNOWN_TOKENS: "xxxxxxxx,!xxxxxxxx.xyz.com,RoomName"
  MATRIX_ADMIN_ROOM: '!xxxxxxxxxxx:xyz.com'
  MATRIX_DEVICE: matrix-device-1
  MATRIX_PASSWORD: xxxxxxxxxxxxxxxx
  MATRIX_SERVER: https://xxx.xyz.com
  MATRIX_SSLVERIFY: 'True'
  MATRIX_USERID: '@webhooks:xyz.com'
  MESSAGE_FORMAT: raw
  USE_MARKDOWN: 'True'
  ALLOW_UNICODE: 'True'
  DISPLAY_APP_NAME: 'True'
